<% content_for :page_title, 'Users Management' %>

<div class="d-flex justify-content-between mb-4">
  <div>
    <h3>All Users (<%= @users.count %>)</h3>
  </div>
  <div>
    <%= link_to 'Create New User', new_admin_user_path, class: 'btn btn-success' %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Phone</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.full_name %></td>
            <td><%= user.email %></td>
            <td><span class="badge <%= user.admin? ? 'bg-danger' : 'bg-primary' %>"><%= user.role %></span></td>
            <td><%= user.phone_number || '-' %></td>
            <td><%= user.created_at.strftime("%b %d, %Y %H:%M") %></td>
            <td>
              <div class="btn-group btn-group-sm">
                <%= link_to 'View', admin_user_path(user), class: 'btn btn-info' %>
                <%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-warning' %>
                <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
