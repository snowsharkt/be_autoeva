<h1>Comments Management</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Sale Post</th>
        <th>Content</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.id %></td>
          <td><%= comment.user.email %></td>
          <td><%= link_to comment.sale_post.title, admin_sale_post_path(comment.sale_post) if comment.sale_post %></td>
          <td><%= truncate(comment.content, length: 100) %></td>
          <td><%= comment.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <%= link_to "View", admin_comment_path(comment), class: "btn btn-sm btn-info" %>
            <%= link_to "Delete", admin_comment_path(comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="pagination-container">
  <%= paginate @comments %>
</div>
