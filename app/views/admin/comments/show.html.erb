<h1>Comment Details</h1>

<div class="card mb-4">
  <div class="card-header">
    <strong>Comment ID:</strong> <%= @comment.id %>
  </div>
  <div class="card-body">
    <div class="mb-3">
      <strong>User:</strong> <%= @comment.user.email %> (<%= @comment.user.name %>)
    </div>

    <div class="mb-3">
      <strong>Sale Post:</strong>
      <%= link_to @comment.sale_post.title, admin_sale_post_path(@comment.sale_post) if @comment.sale_post %>
    </div>

    <div class="mb-3">
      <strong>Content:</strong>
      <div class="mt-2 p-3 bg-light rounded">
        <%= @comment.content %>
      </div>
    </div>

    <div class="mb-3">
      <strong>Created At:</strong> <%= @comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
    </div>

    <div class="mb-3">
      <strong>Updated At:</strong> <%= @comment.updated_at.strftime("%Y-%m-%d %H:%M:%S") %>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to "Back to Comments", admin_comments_path, class: "btn btn-secondary" %>
    <%= link_to "Delete Comment", admin_comment_path(@comment), method: :delete,
                data: { confirm: 'Are you sure you want to delete this comment?' },
                class: "btn btn-danger" %>
  </div>
</div>
